#ifndef CARDINAL__INCLUDE__CONFIGURATION_H_
#define CARDINAL__INCLUDE__CONFIGURATION_H_

/*
**  @brief  Cardinal Version - Major
**  @par    Definition
**          This macro will be configured to be the MAJOR version of the Cardinal engine.
*/
#define CARDINAL_VERSION_MAJOR @CARDINAL_VERSION_MAJOR@
/*
**  @brief  Cardinal Version - Minor
**  @par    Definition
**          This macro will be configured to be the MINOR version of the Cardinal engine.
*/
#define CARDINAL_VERSION_MINOR @CARDINAL_VERSION_MINOR@
/*
**  @brief  Cardinal Version - Patch
**  @par    Definition
**          This macro will be configured to be the Patch version of the Cardinal engine.
*/
#define CARDINAL_VERSION_PATCH @CARDINAL_VERSION_PATCH@

/*
**  @brief  Cardinal Version - Package Version
**  @par    Definition
**          This macro will  be configured to be the string representing the Cardinal Engine's package version. This package
**          version is a combination of @ref CARDINAL_VERSION_MAJOR, @ref CARDINAL_VERSION_MINOR and 
**          @ref CARDINAL_VERSION_PATCH.
*/
#define CARDINAL_VERSION_STRING "v@CARDINAL_PACKAGE_VERSION@"

//! @cond
#cmakedefine01 CARDINAL_BUILD_STATIC
#cmakedefine01 CARDINAL_BUILD_SHARED
//! @endcond

#endif
